<%= form_for @comment, remote: true, id: "edit-cmt-#{@comment.id}" do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :book_id %>

  <div class="form-group">
    <%= f.text_area :content, rows: Settings.comment.rows,
      id: "content-#{@comment.user_id}", class: "form-control" %>
  </div>

  <%= f.submit t("submit"), class: "btn btn-primary" %>
<% end %>
