<div class="well" id="reply-form-<%= @comment.parent_id %>">
  <%= form_for @comment.new_reply, remote: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.hidden_field :book_id %>
    <%= f.hidden_field :parent_id %>

    <div class="form-group">
      <%= f.text_area :content, rows: Settings.comment.rows,
        class: "form-control", id: "content-#{@comment.new_reply.parent_id}" %>
    </div>

    <%= f.submit t("comments.comment.reply"), class: "btn btn-primary" %>
  <% end %>
</div>
