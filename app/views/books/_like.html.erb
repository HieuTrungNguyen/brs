<% if logged_in? %>
  <%= form_for current_user.likes.build, remote: true do |f| %>
    <div><%= hidden_field_tag :book_id, @book.id %></div>
    <div><%= hidden_field_tag :user_id, current_user.id %></div>
    <button type="submit" class="btn btn-default btn-success">
      <span class="glyphicon glyphicon-thumbs-up"></span> <%= t ".Like" %>
    </button>
    <%= pluralize @book.likes.count, t(".other") if @book.likes.count > 0 %>
  <% end %>
<% else %>
  <button type="button" class="btn btn-default btn-success">
    <span class="glyphicon glyphicon-thumbs-up"></span> <%= t ".Like" %>
  </button>
  <%= pluralize @book.likes.count, t(".like") if @book.likes.count > 0 %>
<% end %>
