<div class="row">
  <div class="col-sm-6">
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag @book.image, class: "image" %>
      </div>
    </div>
    <div class="rate-book">
      <% if logged_in? %>
        <span class="marks"><%= t ".mark" %></span>
        <div class="row">
          <div class="col-sm-3 mark-form">
            <%= render "mark_books/mark_book", mark_book: @mark_book %>
          </div>
          <div class="col-sm-3 favorites">
            <%= render "favorite_form" %>
          </div>
        </div>
      <% end %>
    </div>
    <hr>
    <%= render "like_form" %>
  </div>
  <div class="col-sm-6">
    <div class="title">
      <span class="title-item"><%= @book.name %></span>
    </div>
    <div class="descript">
      <%= @book.description %>
    </div>
  </div>
</div>

<h3><%= t ".comment" %> (<%= @book.comments.count %>)</h3>
<div class="row">
  <%= render "comment_form" %>
</div>
<div class="comment"></div>
<%= render @comments %>
