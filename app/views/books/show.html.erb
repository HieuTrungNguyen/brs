<div class="row">
  <div class="col-sm-6">
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag @book.image, class: "image" %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="title">
      <span class="title-item"><%= @book.name %></span>
    </div>
    <div class="descript">
      <%= @book.description %>
    </div>
  </div>
</div>
