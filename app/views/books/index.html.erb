<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-3">
      <div class="index-book">
        <%= link_to book do %>
          <%= image_tag book.image, class: "book" %>
        <% end %>
      </div>
      <div class="content-book">
        <%= link_to book.name, book %>
        <p class="price">$<%= book.price %></p>
      </div>
    </div>
  <% end %>
  <%= paginate @books, theme: "twitter-bootstrap-3" %>
</div>
