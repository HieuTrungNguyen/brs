<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-3">
      <div class="index-book">
        <%= link_to book do %>
          <%= image_tag book.image, class: "book" %>
        <% end %>
      </div>
      <div class="content-book">
        <%= link_to book.name, book %>
        <p class="price">$<%= book.price %></p>
      </div>
      <div class="comments">
        <span class="like">
          <span class="glyphicon glyphicon-thumbs-up"></span>
          <%= pluralize book.likes.count, t(".like") %>&nbsp;
        </span>
        <span class="comment">
          <span class="glyphicon glyphicon-comment"></span>
          <%= pluralize book.comments.count, t(".comment") %>
        </span>
      </div>
    </div>
  <% end %>
  <%= paginate @books, theme: "twitter-bootstrap-3" %>
</div>
